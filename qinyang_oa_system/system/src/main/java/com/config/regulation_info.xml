<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://m.ybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="regulation_info">

	<resultMap id="result" type="regulation_info">
		<result property="regulation_id" column="regulation_id" />
		<result property="regulation_department" column="regulation_department" />
		<result property="regulation_title" column="regulation_title" />
		<result property="regulation_content" column="regulation_content" />
		<result property="regulation_resourceurl" column="regulation_resourceurl" />
		<result property="regualation_addtime" column="regualation_addtime" />
	</resultMap>

	<insert id="insert" parameterType="regulation_info">
		insert into
		regulation_info(regulation_department,regulation_title,regulation_content,regulation_resourceurl,regulation_addtime)
		values(#{regulation_department},#{regulation_title},#{regulation_content},#{regulation_resourceurl},#{regulation_addtime});
	</insert>

	<select id="select_by_regulation_id" parameterType="int" resultMap="result">
		SELECT * FROM regulation_info WHERE regulation_id = #{regulation_id};
	</select>

	<select id="select_all" resultMap="result">
		SELECT * FROM regulation_info;
	</select>

</mapper>


