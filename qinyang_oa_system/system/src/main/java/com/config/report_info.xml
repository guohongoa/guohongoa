<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://m.ybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="report_info">

	<resultMap id="result" type="report_info">
		<result property="report_id" column="report_id" />
		<result property="report_sender" column="report_sender" />
		<result property="report_sender_id" column="report_sender_id" />
		<result property="report_receiver" column="report_receiver" />
		<result property="report_receiver_id" column="report_receiver_id" />
		<result property="report_title" column="report_title" />
		<result property="report_content" column="report_content" />
		<result property="report_addtime" column="report_addtime" />

	</resultMap>

	<insert id="insert" parameterType="report_info">
		insert into
		report_info(report_sender,report_sender_id,report_receiver,report_receiver_id,report_title,report_content,report_addtime)
		values(#{report_sender},#{report_sender_id},#{report_receiver},#{report_receiver_id},#{report_title},#{report_content},#{report_addtime})
	</insert>

	<select id="select_all" resultMap="result">
		SELECT * FROM report_info;
	</select>

</mapper>