<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://m.ybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="employee_info">

	<resultMap id="result" type="employee_info">
		<result property="employee_id" column="employee_id" />
		<result property="employee_code" column="employee_code" />
		<result property="employee_name" column="employee_name" />
		<result property="employee_position" column="employee_position" />
		<result property="employee_gender" column="employee_gender" />
		<result property="employee_department" column="employee_department" />
		<result property="employee_leader" column="employee_leader" />
		<result property="employee_addworktime" column="employee_addworktime" />
		<result property="employee_phone" column="employee_phone" />
		<result property="employee_addtime" column="employee_addtime" />
		
		<result property="employee_birthdate" column="employee_birthdate" />
		<result property="employee_idcode" column="employee_idcode" />
		<result property="employee_email" column="employee_email" />
		<result property="employee_address" column="employee_address" />
	</resultMap>

	<insert id="insert" parameterType="employee_info">
		insert into
		employee_info(employee_code,employee_name,employee_position,employee_gender,employee_department,employee_leader,employee_addworktime,employee_phone,employee_addtime,employee_birthdate,employee_idcode,employee_email,employee_address)
		values(#{employee_code},#{employee_name},#{employee_position},#{employee_gender},#{employee_department},#{employee_leader},#{employee_addworktime},#{employee_phone},#{employee_addtime},#{employee_birthdate},#{employee_idcode},#{employee_email},#{employee_address});
	</insert>

	<select id="select_by_employee_id" parameterType="int" resultMap="result">
		SELECT * FROM employee_info WHERE employee_id = #{employee_id};
	</select>

	<select id="select_all" resultMap="result">
		SELECT * FROM employee_info;
	</select>
	
	<delete id="delete" parameterType="int">
        DELETE FROM employee_info WHERE employee_id = #{employee_id};
    </delete>

</mapper>


