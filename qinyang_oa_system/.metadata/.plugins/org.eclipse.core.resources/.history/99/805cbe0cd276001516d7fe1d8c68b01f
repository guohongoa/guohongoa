<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://m.ybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="task_info">

<resultMap id="result" type="task_info">
        <result property="task_id" column="task_id"/>
        <result property="task_sender" column="task_sender"/>
        <result property="task_sender_id" column="task_sender_id"/>
        <result property="task_receiver" column="task_receiver"/>
        <result property="task_receiver_id" column="task_receiver_id"/>
        <result property="task_title" column="task_title"/>
        <result property="task_content" column="task_content"/>
         <result property="task_status" column="task_status"/>
        <result property="task_addtime" column="task_addtime"/>
           
</resultMap>

<insert id="insert" parameterType="task_info" >
   insert into task_info(task_sender,task_sender_id,task_receiver,task_receiver_id,task_title,task_content,task_status,task_addtime) values(#{task_sender},#{task_sender_id},#{task_receiver},#{task_receiver_id},#{task_title},#{task_content},#{task_status},#{task_addtime})
</insert>

<select id="select_all" resultMap="result">
        SELECT * FROM task_info;
</select>
 
</mapper>