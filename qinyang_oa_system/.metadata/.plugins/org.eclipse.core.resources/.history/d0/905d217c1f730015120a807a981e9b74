<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://m.ybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="mail_info">

<resultMap id="result" type="mail_info">
        <result property="mail_id" column="mail_id"/>
        <result property="mail_sender" column="mail_sender"/>
        <result property="mail_receiver" column="mail_receiver"/>
        <result property="mail_title" column="mail_title"/>
        <result property="mail_content" column="mail_content"/>
        <result property="mail_addtime" column="mail_addtime"/>
           
</resultMap>

<insert id="insert" parameterType="mail_info" >
   insert into mail_info(mail_sender,mail_receiver,mail_title,mail_content,mail_addtime) values(#{mail_sender},#{mail_receiver},#{mail_title},#{mail_content},#{mail_addtime})
</insert>

<select id="select_all" resultMap="result">
        SELECT * FROM mail_info;
</select>
 
</mapper>